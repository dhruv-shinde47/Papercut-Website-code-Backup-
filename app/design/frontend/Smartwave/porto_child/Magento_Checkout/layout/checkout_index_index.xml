<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" layout="1column" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceBlock name="page.main.title">
            <action method="setPageTitle">
                <argument translate="true" name="title" xsi:type="string">Checkout</argument>
            </action>
        </referenceBlock>
        <referenceBlock name="breadcrumbs" >
            <action method="addCrumb">
                <argument name="crumbName" xsi:type="string">Home Page</argument>
                <argument name="crumbInfo" xsi:type="array">
                    <item name="title" xsi:type="string">Home Page</item>
                    <item name="label" xsi:type="string">Home Page</item>
                    <item name="link" xsi:type="string">/</item>
                </argument>
            </action>
            <action method="addCrumb">
                <argument name="crumbName" xsi:type="string">Checkout</argument>
                <argument name="crumbInfo" xsi:type="array">
                    <item name="title" xsi:type="string">Checkout</item>
                    <item name="label" xsi:type="string">Checkout</item>
                </argument>
            </action>
        </referenceBlock>
    </body>
</page>
