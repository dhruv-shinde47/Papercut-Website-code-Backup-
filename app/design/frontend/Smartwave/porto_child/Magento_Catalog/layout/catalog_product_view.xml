<page layout="2columns-right" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceBlock name="product.info.stock.sku" remove="true"/>
        <referenceBlock name="product.info.overview" remove="true"/>
        <referenceBlock name="product.info.price" remove="true"/>
        <referenceContainer name="product.info.social" remove="true" />
        <referenceBlock name="prev_next_products" remove="true"/>
        <referenceBlock name="product.price.tier" remove="true"/>
        
        <move element="page.main.title" destination="product.info.main" before="-"/>
        <move element="product.info.sku" destination="product.info.main" after="page.main.title"/>
        <move element="product.info.description" destination="product.info.main" before="product.info.price"/>
        
        <!--<move element="catalog.product.related" destination="content" />-->

    </body>
</page>